{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/database": [
        "packages/database/src/index.ts"
      ]
    },
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist"
  },
  "include": [
    "src",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/server.ts"
  ]
}